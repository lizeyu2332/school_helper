<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pro.mapper.DeliveryPointMapper">
    
    <resultMap id="BaseResultMap" type="com.example.pro.entity.DeliveryPoint">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.example.pro.entity.DeliveryPoint" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO delivery_point (name, address, longitude, latitude, description, create_time, update_time)
        VALUES (#{name}, #{address}, #{longitude}, #{latitude}, #{description}, NOW(), NOW())
    </insert>
    
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM delivery_point WHERE id = #{id}
    </select>
    
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM delivery_point ORDER BY create_time DESC
    </select>
    
    <update id="update" parameterType="com.example.pro.entity.DeliveryPoint">
        UPDATE delivery_point
        SET name = #{name},
            address = #{address},
            longitude = #{longitude},
            latitude = #{latitude},
            description = #{description},
            update_time = NOW()
        WHERE id = #{id}
    </update>
    
    <delete id="delete">
        DELETE FROM delivery_point WHERE id = #{id}
    </delete>
    
</mapper>

